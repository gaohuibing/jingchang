/* pages/details/details.wxss */
.detail-wrap{
    background: #f4eee0;
    padding-bottom: 30rpx
}
image{
    display: block
}
.topimg{
    width: 750rpx;
    height: 213rpx;
    position: relative;
    overflow: hidden
}
.topimg image{
    width: 100%;
    height: 100%
}
.topimg .dianzan{
    position: absolute;
    bottom: 20rpx;
    left: 0;
    width: 100%;
    text-align: right;
    padding:  0 24rpx;
    box-sizing: border-box;
    color: #333;
    font-size: 34rpx;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    z-index: 9
}
.topimg .dianzan image{
    width: 34rpx;
    height: 34rpx;
    margin-right: 6rpx
}
.main{
    border-radius: 10rpx;
    background: #fff;
    padding: 0 30rpx;
    box-sizing: border-box;
    position: relative;
    overflow: hidden;
    padding-bottom: 30rpx
}
.tit-img{
    width: 100%;
    height: 74rpx;
    margin: 50rpx 0
}
.tit-img image{
    width: 120%;
    height: 120%;
    margin-left: -10%
}
.des{
    border: #dfd4bb 2rpx solid;
    padding:50rpx 30rpx;
    box-sizing: border-box;
    position: relative;
    z-index: 10;
    font-size: 34rpx;   
    color: #1c1c1c;
    line-height: 1.6;
    text-align: justify
}
.rt{
    width: 40rpx;
    height: 50rpx;
    background: #f2eee4;
    right: 15rpx;
    top: 150rpx;
    /* float: right */
    position: absolute;
    z-index: 9
}
.main-img{
    padding: 10rpx;
    border-radius: 6rpx;
    box-shadow: 0 0 5rpx #999;
    margin-top: 30rpx;
    
    box-sizing: border-box
}
.main-img image{
    width: 100%;
    
}
.des1{
    border: #dfd4bb 2rpx solid;
    border-radius: 10rpx;
    padding:50rpx 30rpx;
    box-sizing: border-box;
    position: relative;
    z-index: 10;
    font-size: 34rpx;
    line-height: 1.6;
    color: #1c1c1c;
    margin-top: 30rpx;
    text-align: justify
}
.des1 .yd{
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    z-index: 99
}
.des1 .zd{
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    left: 20rpx;
    bottom: 20rpx;
    z-index: 99
}
.main-imgs{
    margin-top: 30rpx;
}
.short-imgs{
    overflow: hidden
}
.short{
    float: left;
    width: 48%;
    /* padding: 10rpx;
    border-radius: 6rpx;
    box-shadow: 0 0 5rpx #999; */
   
    box-sizing: border-box
}
.short:nth-child(even){
    float: right
}
.short image{
    width: 100%;
  
}
.r-arrow{
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: #dfd4bb
}
.renwen-img{
    width: 200rpx;
    height: 56rpx;
    position: absolute;
    top: -24rpx;
    left: 50%;
    margin-left: -100rpx
}